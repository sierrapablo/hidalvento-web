interface ImageTextSectionProps {
  title: string;
  text: string;
  image: string;
}

export const ImageTextSection = ({ title, text, image }: ImageTextSectionProps) => {
  return (
    <div
      className="relative w-full h-full"
    >
      {/* Image */}
      <div className="w-full md:w-3/5 h-dvh relative">
        <img
          src={image}
          alt={`Imagen para ${title}`}
          className="w-full h-dvh object-cover"
        />
        {/* Capa superpuesta solo en m√≥viles */}
        <div className="absolute inset-0 flex items-center justify-center md:hidden">
          <div className="h-dvh bg-neutral-700/40 p-8 text-center flex flex-col justify-center">
            <h2 className="text-white text-xl font-bold mb-4">{title}</h2>
            <p className="text-white text-sm text-justify whitespace-pre-line">{text}</p>
          </div>
        </div>
      </div>

      {/* Texto solo visible en md+ */}
      <div className="hidden md:flex md:flex-col md:justify-end md:w-2/5 px-16 pb-20">
        <h2 className="text-3xl font-bold mb-4">{title}</h2>
        <p className="text-lg text-gray-700 text-justify whitespace-pre-line">{text}</p>
      </div>
    </div>
  );
};

